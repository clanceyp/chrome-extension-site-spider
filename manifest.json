{
  "version": "1.0.3",
  "manifest_version": 3,
  "name": "Source Code Searcher",
  "short_name": "Site Spider",
  "description": "This extension provides a search to find HTML content, like class names etc. within the current domain",
  "homepage_url": "https://github.com/clanceyp/chrome-extension-site-spider",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "options_page": "options/index.html",
  "icons": {
	"48": "/lib/i/48.png",
    "128": "/lib/i/128.png"
  },
  "action": {
    "default_icon" : "/lib/i/48.png",
    "default_title": "Search Linked Pages HTML"
  }
}
